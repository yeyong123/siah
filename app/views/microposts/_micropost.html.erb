#encoding:utf-8
<li>
<span class="content">
	<%= micropost.content %>
</span>
<span class="timestamp">
	发布于<%= time_ago_in_words(micropost.created_at) %>前.
</span>
<% if current_user?(micropost.user) %>
	<%= link_to "删除", micropost, method: :delete,
																 date: { confirm: "确定删除？"},
																 title: micropost.content %>
	<%= link_to "评论", '#' %>
	<% end %>
</li>
